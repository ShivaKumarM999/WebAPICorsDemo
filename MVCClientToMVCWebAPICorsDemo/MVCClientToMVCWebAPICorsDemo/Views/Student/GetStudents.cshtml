
@{
    ViewBag.Title = "GetStudents";
}

<h1>GetStudents</h1>

<table border="1" id="table1">
    <tr>
        <th>Student ID</th>
        <th>Student Name</th>
        <th>Marks</th>
    </tr>
</table>

<input type="button" value="GetALLStudents" id="button1" />


<span id="ResponseSpan">  </span>


<script src="~/Scripts/jquery-3.4.1.js"></script>

<script type="text/javascript">
    $(function () {

        $("#button1").click(
            function () {

                //ajax code
                $.ajax({
                    url: 'https://localhost:44322/api/Students',
                    data: {},
                    type: "get",
                    success: function (response) {

                        $("#table1 tr:gt(0)").remove();

                        $.each(response, function (i, item) {
                            $("#table1").append
                                ("<tr><td>" + item.Id + "</td> <td>" + item.Name + "</td> <td>" + item.Marks + "</td>  </tr>");
                        });

                    },

                    error: function (jqXHR, textStatus, err) {
                        $("#ResponseSpan").html(err);
                    }
                });

            });

    });
</script>