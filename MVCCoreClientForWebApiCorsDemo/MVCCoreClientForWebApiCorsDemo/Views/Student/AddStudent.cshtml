@{
    ViewData["Title"] = "AddStudent";
}

<h1>AddStudent</h1>

<form id="form1">
    <p>
        <label for="Id">ID:</label>
        <input type="text" id="Id" name="Id" />
    </p>

    <p>
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="StudentName" />
    </p>

    <p>
        <label for="Marks">Marks:</label>
        <input type="text" id="Marks" name="Marks" />
    </p>


    <p>
        <input type="button" id="button1" value="Insert" />
        <span id="ResponseSpan"></span>
    </p>

</form>


<script src="~/lib/jquery/dist/jquery.js"></script>
<!-- jquery code -->
<script type="text/javascript">
    $(function () {

        $("#button1").click(function () {

            var student = { id: $('#Id').val(), name: $('#Name').val(), marks: $('#Marks').val() };



            //ajax code
            $.ajax({
                url: 'https://localhost:44348/api/Students',
                data: JSON.stringify(student),
                type: "post",
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                success: function (response) {
                    $("#ResponseSpan").html(response);
                    alert("record inserted")
                },
                error: function (jqXHR, textStatus, err) {
                    $("#ResponseSpan").html(err);
                }
            });

        });

    });
</script>
